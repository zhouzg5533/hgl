// 文档教程: https://uniapp.dcloud.net.cn/uniCloud/schema
{
	"bsonType": "object",
	"required": [
		"name",
		"description",
		"address",
		"longitude",
		"latitude",
		"tel",
		"email",
		"work_time"
	],
	"permission": {
		"read": true,
		"create": false,
		"update": false,
		"delete": false
	},
	"properties": {
		"_id": {
			"description": "ID，系统自动生成"
		},
		"name": {
			"bsonType": "string",
			"description": "企业名称"
		},
		"description": {
			"bsonType": "string",
			"description": "企业简介"
		},
		"partner_description": {
			"bsonType": "string",
			"description": "企业合伙伙伴简介"
		},
		"cover_image": {
			"bsonType": "string",
			"description": "企业形象图"
		},
		"address": {
			"bsonType": "string",
			"description": "地址"
		},
		"longitude": {
			"bsonType": "string",
			"description": "经度"
		},
		"latitude": {
			"bsonType": "string",
			"description": "纬度"
		},
		"tel": {
			"bsonType": "string",
			"description": "联系电话"
		},
		"email": {
			"bsonType": "string",
			"description": "电子邮箱"
		},
		"work_time": {
			"bsonType": "string",
			"description": "工作时间"
		}
	}
}
